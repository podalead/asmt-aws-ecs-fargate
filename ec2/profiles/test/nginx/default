server {
        server_name {{ api_sub_domain }}.{{ domain }};
        listen      443 ssl;
        root        /home/spinbackup/www/var/frontend/office365/build;

        ssl_certificate           /etc/nginx/{{ ssl_certificate }};
        ssl_certificate_key       /etc/nginx/{{ ssl_certificate_key }};
        ssl_session_timeout  10m;
        ssl_protocols        SSLv2 TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers          AES128-SHA:AES256-SHA:RC4-SHA:DES-CBC3-SHA:RC4-MD5;
        ssl_session_cache    shared:SSL:10m;

        error_log  /var/log/nginx/b2b-officeapi.error.log;
        access_log /var/log/nginx/b2b-officeapi.access.log timed_combined;

        # set Host, X-Real-IP, X-Forwarded-For, X-Forwarded-Proto headers
#        include proxy_params;

        add_header                  X-Frame-Options "SAMEORIGIN";

        location / {
                index index.html;
                proxy_set_header  Host $host;
                proxy_set_header  X-Real-IP $remote_addr;
                proxy_set_header  X-Forwarded-Proto https;
                proxy_set_header  X-Forwarded-For $remote_addr;

                proxy_pass         http://officeapi;
                proxy_http_version 1.1;
                proxy_set_header   Upgrade $http_upgrade;
                proxy_set_header   Connection "upgrade";
                auth_basic off;
        }
}
{% if (dc == "aws")  or (env_name == "te1") -%}
server {
        server_name {{ office365_sub_domain }}.{{ domain }};
        listen      443 ssl;
        root        /home/spinbackup/www/var/frontend/office365/build;

        ssl_certificate           /etc/nginx/{{ ssl_certificate }};
        ssl_certificate_key       /etc/nginx/{{ ssl_certificate_key }};
        ssl_session_timeout  10m;
        ssl_protocols        SSLv2 TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers          AES128-SHA:AES256-SHA:RC4-SHA:DES-CBC3-SHA:RC4-MD5;
        ssl_session_cache    shared:SSL:10m;
        gzip on;
        gzip_disable "msie6";

        gzip_comp_level 6;
        gzip_min_length 1100;
        gzip_buffers 16 8k;
        gzip_proxied any;
        gzip_types
            text/plain
            text/css
            text/js
            text/xml
            text/javascript
            application/javascript
            application/x-javascript
            application/json
            application/xml
            application/rss+xml
            image/svg+xml;
        error_log  /var/log/nginx/b2b-office.error.log;
        access_log /var/log/nginx/b2b-office.access.log timed_combined;

        # set Host, X-Real-IP, X-Forwarded-For, X-Forwarded-Proto headers
        include proxy_params;

        add_header                  X-Frame-Options "SAMEORIGIN";
        location / {
                index index.html;
                add_header 'Cache-Control' 'no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0';
                expires off;
        }
        location /auth/office/callback {
                try_files $uri /index.html;
        }

        location /signin {
                try_files $uri /index.html;
        }

}
{% endif %}
